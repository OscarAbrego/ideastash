
<% unless comment.id.nil? %>
  <div id="comment-<%=comment.id%>" class="">

    <div class="card blue-grey darken-1  z-depth-3 ">
      <div class="card-content white-text">
        <span class="card-title"><%= comment.comment_type %></span>
        <p><%= comment.content %></p><br>
        <p> <%= comment.created_at.strftime('%F') %> </p>
        <% unless comment.id.nil? %>
        <p> <%= comment.user.username %> </p>
        <% end %>
      </div>

      <div class="card-action">
        <a class="btn orange waves-effect" href="#">HELPFUL</a>
        <a class="btn red waves-effect" href="#">NOT HELPFUL</a>
      </div>
    </div>

  </div>
  <% end %>
