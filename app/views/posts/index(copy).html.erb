<p id="notice"><%= notice %></p>

<h1>Explore the public stash</h1>


<br>
<%= render 'form' %>
<%= link_to 'New Post', new_post_path %>




<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <!-- <th>Category</th> -->
      <th>User</th>
      <th>Likecount</th>
      <th>Dislikecount</th>
      <th>Reportcount</th>
      <th>Commentcount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>

        <td><%= post.user %></td>
        <td><%= post.likecount %></td>
        <td><%= post.dislikecount %></td>
        <td><%= post.reportcount %></td>
        <td><%= post.commentcount %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
