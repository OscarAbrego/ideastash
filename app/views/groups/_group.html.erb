<% unless group.id.nil? %>

<div id="group-<%=group.id%>" class="">

  <div class="card blue-grey darken-1  z-depth-3 ">
    <div class="card-content white-text">
      <span class="card-title"><h3><%= group.name %></h3></span>
      <p><%= group.description %></p><br>
      <p> <%= group.created_at.strftime('%F') %> </p>
      <% unless group.id.nil? %>
      <p> <%= group.user.username %> </p>
      <% end %>
    </div>

    <div class="card-action">
      <a class="btn orange waves-effect" href="#">HELPFUL</a>
      <a class="btn red waves-effect" href="#">NOT HELPFUL</a>
    </div>
  </div>

</div>

<% end %>
